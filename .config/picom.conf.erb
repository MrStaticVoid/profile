<% gui_scaling_factor = @facts['scaling'] ? @facts['scaling']['gui'] : 1 -%>
backend = "glx";
vsync = true;
xrender-sync-fence = true;

shadow = true;
shadow-radius = <%= (6 * gui_scaling_factor).round %>;
shadow-offset-x = 0;
shadow-offset-y = 0;
shadow-opacity = 0.2;
shadow-exclude = [ "class_g = 'ksmserver'" ];

fading = true;
fade-delta = 10;
fade-in-step = 0.125;
fade-out-step = 0.125;

wintypes:
{
  dock: { shadow = false; };
  dnd:  { shadow = false; };
  menu: { opacity = 0.9; };
};
