<% require 'colorscheme'
dark = ColorScheme.dark.colors_by_base
-%>
* {
    all: unset;
}

#waybar {
    background-color: black;
    color: <%= dark[0x05].web %>;
    font-family: monospace;
    font-size: 9pt;
}

#custom-window {
    font-family: sans-serif;
    font-weight: 500;
}

.windows menu {
    font-weight: normal;
    padding: 0.3em;
}

#clock {
    background-color: <%= dark[0x02].web %>;
    margin: 2px 0 2px 0;
}
