<% gui_scaling_factor = @facts['scaling'] ? @facts['scaling']['gui'] : 1 -%>
* {
    all: unset;
}

.taffy-window {
    color: #d8d8d8;
    font-family: monospace;
    font-size: 9pt;
}

.taffy-box {
    background-color: black;
    margin-bottom: <%= (18 * gui_scaling_factor).round - 18 %>px;
}

.taffy-window menuitem:hover {
    background-color: #282828;
}
