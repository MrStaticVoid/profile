<% require 'colorscheme'
light = ColorScheme.light.colors_by_base
gui_scaling_factor = @facts['scaling'] ? @facts['scaling']['gui'] : 1
-%>
* {
    font: "monospace 9";
    text-color: <%= light[0x05].web %>;
    background-color: rgba(0, 0, 0, 0);
    spacing: 0;
}

#window {
    background-color: rgba(<%= light[0x00].rgb.join(', ') %>, 100%);
    border: <%= (3 * gui_scaling_factor).round %>px;
    border-color: <%= light[0x03].web %>;
    padding: <%= (2 * gui_scaling_factor).round %>px;
}

#listview {
    scrollbar: true;
}

#scrollbar {
    handle-color: <%= light[0x03].web %>;
    handle-width: 1ch;
}

#element selected {
    background-color: <%= light[0x02].web %>;
}

#element active {
    text-color: <%= light[0x0D].web %>;
}

#element selected.active {
    text-color: <%= light[0x0D].web %>;
}

#element urgent {
    text-color: <%= light[0x0A].web %>;
}

#element selected.urgent {
    text-color: <%= light[0x0A].web %>;
}

#inputbar {
    children: [prompt, textbox-prompt-colon, entry, case-indicator];
}

#prompt {
    font: "monospace bold 9";
    text-color: <%= light[0x01].web %>;
    background-color: <%= light[0x0B].web %>;
    padding: 0 1ch 0 1ch;
}

#textbox-prompt-colon {
    text-color: <%= light[0x0B].web %>;
    expand: false;
    str: "î‚° ";
}

