<% require 'colorscheme'
cs = ColorScheme.dark
colors = cs.terminal
text_scaling_factor = @facts['scaling'] ? @facts['scaling']['text'] : 1 -%>
BoldAsFont=yes
Font=Hack
FontHeight=<%= (9 * text_scaling_factor).round %>
Term=mintty-powerline
CursorType=block
Scrollbar=none
CursorBlinks=no
ConfirmExit=no
BellType=0
ForegroundColour=<%= cs.foreground.rgb.join(',') %>
BackgroundColour=<%= cs.background.rgb.join(',') %>
CursorColour=<%= cs.cursor.rgb.join(',') %>
<% %w(Black Red Green Yellow Blue Magenta Cyan White).each_with_index do |name, i| -%>
<%= name %>=<%= colors[i].rgb.join(',') %>
Bold<%= name %>=<%= colors[i + 8].rgb.join(',') %>
<% end -%>
