<% if @facts['os']['family'] == 'Gentoo' -%>
<% require 'colorscheme'
dark = ColorScheme.dark.colors_by_base -%>
@-moz-document url-prefix(about:blank) {
  body {
    background-color: <%= dark[0x01].web %> !important;
  }
}

/* Respect Gtk theme */
* {
  scrollbar-color: auto !important;
  scrollbar-width: auto !important;
}
<% end -%>
