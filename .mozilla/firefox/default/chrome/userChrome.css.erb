<% gui_scaling_factor = @facts['scaling'] ? @facts['scaling']['gui'] : 1
offset = (3 * gui_scaling_factor).round -%>
/*
 * Fix context menu position on xmonad
 * See: https://www.reddit.com/r/firefox/comments/672ef7/rightclick_menu_open_under_mouse_cursor/?st=j8gt6u78&sh=c59dd405
 */
@supports -moz-bool-pref("nest.contextMenuOffsetTweak") {
    #contentAreaContextMenu { margin: <%= offset %>px 0 0 <%= offset %>px }
}
